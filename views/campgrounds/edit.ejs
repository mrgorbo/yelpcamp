<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align:center;">Update <%= campground.name %></h1>
        <div style="width:30%; margin: 35px auto;">
            <!-- NEW CAMPGROUND FORM -->
            <form action="/campgrounds/<%= campground._id %>/?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="campground[name]" placeholder="location" value="<%= campground.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="campground[image]" placeholder="image URL" value="<%= campground.image %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="campground[description]" placeholder="description" value="<%= campground.description %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="campground[rating]" placeholder="rating (1-10)" value="<%= campground.rating %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="campground[price]" placeholder="price" value="<%= campground.price %>" min="0.01" step="0.01">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/campgrounds">Go back</a>
        </div>
    </div>
</div>


<% include ../partials/footer %>