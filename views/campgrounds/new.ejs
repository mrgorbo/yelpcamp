<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align:center;">Create a new campground</h1>
        <div style="width:30%; margin: 35px auto;">
            <!-- NEW CAMPGROUND FORM -->
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" placeholder="location">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="image" placeholder="image URL" value="https://source.unsplash.com/">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="desc" placeholder="description">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="rating" placeholder="rating (1-10)">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="price" placeholder="price" min="0.01" step="0.01">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/campgrounds">Go back</a>
        </div>
    </div>
</div>


<% include ../partials/footer %>